{
    "type": "object",
    "properties": {
        "username": {
            "description": "User name",
            "type": "string",
            "minLength": 1
        },
        "password": {
            "description": "Password",
            "type": "string",
            "minLength": 1
        },
        "token": {
            "description": "Authentication token",
            "type": "string",
            "minLength": 1
        },
        "useTokenAuth": {
            "description": "Whether to use token authentication",
            "type": "boolean"
        }
    },
    "anyOf": [
        {
            "required": ["username", "password"],
            "properties": {
                "useTokenAuth": {
                    "const": false
                }
            }
        },
        {
            "required": ["token"],
            "properties": {
                "useTokenAuth": {
                    "const": true
                }
            }
        }
    ]
}