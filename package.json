{
  "name": "vscode-polarion",
  "displayName": "Polarion",
  "description": "Polarion integration in Visual Studio Code",
  "publisher": "JesperRaemaekers",
  "repository": {
    "url": "https://github.com/jesper-raemaekers/vscode-polarion"
  },
  "license": "GPL-3.0-or-later",
  "icon": "logo/logo.png",
  "version": "0.2.2",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:vscode-polarion.clearCache",
    "onCommand:vscode-polarion.openPolarion",
    "onCommand:vscode-polarion.restart",
    "onView:polarionOutline"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-polarion.clearCache",
        "title": "Clear polarion cache"
      },
      {
        "command": "vscode-polarion.openPolarion",
        "title": "Open item in Polarion"
      },
      {
        "command": "vscode-polarion.restart",
        "title": "Restart Polarion client"
      }
    ],
    "configuration": {
      "title": "Polarion",
      "properties": {
        "Polarion.Url": {
          "type": "string",
          "default": "",
          "description": "URL for polarion (For example: http://polarion.example.com/polarion)"
        },
        "Polarion.UseTokenAuth": {
          "type": "boolean",
          "default": true,
          "description": "Use token authentication (stored in VS Code settings)"
        },
        "Polarion.Token": {
          "type": "string",
          "default": "",
          "description": "Polarion authentication token"
        },
        "Polarion.Username": {
          "type": "string",
          "default": "",
          "description": "Username for polarion connection (only used when UseTokenAuth is false)"
        },
        "Polarion.Password": {
          "type": "string",
          "default": "",
          "description": "Password for polarion connection (only used when UseTokenAuth is false)"
        },
        "Polarion.Project": {
          "type": "string",
          "default": "",
          "description": "Name of the polarion project"
        },
        "Polarion.Prefix": {
          "type": "string",
          "default": "",
          "description": "The prefix of the polarion IDs (for example TEST for TEST-123 tickets)"
        },
        "Polarion.Color": {
          "type": "string",
          "default": "#777777",
          "description": "Color for Polarion inserts in files"
        },
        "Polarion.RefreshTime": {
          "type": "number",
          "default": "5",
          "description": "Work item cache time. After this time (in minutes) the item is requested from Polarion again."
        },
        "Polarion.ExceptionRestart": {
          "type": "number",
          "default": "3",
          "description": "Automatically restart extension after x number of exceptions from polarion. Value 0 disables this feature."
        },
        "Polarion.Hover": {
          "type": "boolean",
          "default": true,
          "description": "Enabled the hover feature allowing to see basic info of a work item"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "vscode-polarion.openPolarion",
          "group": "polarion@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "polarionOutline",
          "name": "Polarion outline"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": "polarion.json",
        "url": "./schemas/polarionConfig.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/request": "^2.48.13",
    "@types/sax": "^1.2.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^11.7.2",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clean-html": "^1.5.0",
    "fs-extra": "^9.1.0",
    "jsonschema": "^1.4.0",
    "open": "^7.3.0"
  }
}
